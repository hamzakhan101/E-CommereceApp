<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminMaintainProductActivity"
    android:layout_margin="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:elevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />
        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_below="@id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Product_Description"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            />
        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_below="@id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Product Description"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_name"
            android:background="@drawable/input_design"
            android:hint="Product Price"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
        <Button
            android:id="@+id/update_product"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:layout_below="@id/maintain_product_description"
            android:layout_margin="15dp"
            android:text="Update Product"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:layout_below="@id/update_product"
            android:layout_margin="15dp"
            android:text="Delete Product"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>